
@using Decision.Common.HtmlHelpers
@model Decision.ViewModel.EducationalBackground.AddEducationalBackgroundViewModel
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm(MVC.EducationalBackground.Create(), FormMethod.Post, new { @class = "form-horizontal", id = "createEducationalBackgroundForm", autocomplete = "off", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ApplicantId)
            @Html.HiddenFor(model => model.AttachmentScan)
            <div class="form-group">
                @Html.LabelFor(model => model.EducationalType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.EducationalType)
                    @Html.ValidationMessageFor(model => model.EducationalType, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AcademicDegree, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.AcademicDegree)
                    @Html.ValidationMessageFor(model => model.AcademicDegree, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.StudyFieldId, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.StudyFieldId, Model.StudyFields, "انتخاب رشته تحصیلی", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StudyFieldId, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.InstitutionId, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.InstitutionId, Model.Institutions, "انتخاب موسسه آموزشی", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.InstitutionId, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Supervisor, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.NoAutoCompleteTextBoxFor(model => model.Supervisor)
                    @Html.ValidationMessageFor(model => model.Supervisor, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Advisor, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.NoAutoCompleteTextBoxFor(model => model.Advisor)
                    @Html.ValidationMessageFor(model => model.Advisor, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 2 })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ThesisTopic, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.NoAutoCompleteTextBoxFor(model => model.ThesisTopic)
                    @Html.ValidationMessageFor(model => model.ThesisTopic, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.EntryDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.EntryDate, MVC.Shared.Views.EditorTemplates.PersianDatePicker)
                    @Html.ValidationMessageFor(model => model.EntryDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GraduationDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.GraduationDate, MVC.Shared.Views.EditorTemplates.PersianDatePicker)
                    @Html.ValidationMessageFor(model => model.GraduationDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ThesisScore, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.NoAutoCompleteTextBoxFor(model => model.ThesisScore)
                    @Html.ValidationMessageFor(model => model.ThesisScore, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.GPA, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.NoAutoCompleteTextBoxFor(model => model.GPA)
                    @Html.ValidationMessageFor(model => model.GPA, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.RelatedToOrganizationPosition, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.NoAutoCompleteTextBoxForNumber(model => model.RelatedToOrganizationPosition)
                    @Html.ValidationMessageFor(model => model.RelatedToOrganizationPosition, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-6 col-md-offset-2">
                    <button type="button" id="createEducationalBackgroundButton" autocomplete="off" onclick="formDataSubmitWidOutEditor(this, 'createEducationalBackgroundForm', '#educationalBackgroundList', '#create-educationalBackground')" data-loading-text="در حال ارسال اطلاعات" class="btn btn-success btn-md">
                        ثبت سابقه جدید
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@using Decision.Common.Helpers
@model Decision.ViewModel.EducationalExperience.EditEducationalExperienceViewModel
<div class="col-md-12" id="scientificTeaching-@Model.Id">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-edit"></i>
            </h3>
        </div>
        <div class="panel-body">
            @using (Ajax.BeginForm(MVC.ScientificTeaching.Edit(), new AjaxOptions { HttpMethod = "POST", OnComplete = "editOnComplete(xhr, status, '" + Model.Id + "','#editButton" + Model.Id + "')" }, new { @class = "form-horizontal", id = Model.Id, autocomplete = "off", data_ajax_update = "scientificTeaching-" + Model.Id }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.TeacherId)
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.RowVersion)
                @Html.HiddenFor(model => model.Type)
                <div class="form-group">
                    <label class="control-label col-md-2" for="TitleId">عنوان تدریس شده</label>
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.TitleId, Model.Titles, "انتخاب عنوان تدریس شده", new { @class = "form-control", rows = 2 })
                        @Html.ValidationMessageFor(model => model.TitleId, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BeginYear, new { @class = "control-label col-md-2" })
                    <div class="col-md-9">
                        @Html.NoAutoCompleteTextBoxForNumber(model => model.BeginYear)
                        @Html.ValidationMessageFor(model => model.BeginYear, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EndYear, new { @class = "control-label col-md-2" })
                    <div class="col-md-9">
                        @Html.NoAutoCompleteTextBoxForNumber(model => model.EndYear)
                        @Html.ValidationMessageFor(model => model.EndYear, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="#Description" class="control-label col-md-2">نام مرکز علمی</label>
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 3 })
                    </div>
                </div>
            }
        </div>
        <div class="panel-footer ">
            <div class="pull-left">
                <button type="button" id="@string.Format("editButton{0}",Model.Id)" autocomplete="off" onclick="AjaxForm.CustomSubmit(this, '@Model.Id')" data-loading-text="در حال ارسال اطلاعات" class="btn btn-success btn-sm">
                    <i class="fa fa-check-square-o"></i>
                    ذخیره تغییرات
                </button>

                <a class="btn btn-default btn-sm" data-ajax="true"
                   data-ajax-mode="REPLACE-WITH" data-ajax-complete="cancelEditOnComplete(xhr, status)"
                   data-ajax-update="#scientificTeaching-@Model.Id" data-ajax-method="POST"
                   href="@Url.Action(MVC.ScientificTeaching.CancelEdit(Model.Id))" role="button">
                    <i class="fa fa-arrow-right"></i>
                    انصراف
                </a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

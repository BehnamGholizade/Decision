@using Decision.Common.Helpers
@model Decision.ViewModel.TrainingCourse.EditTrainingCourseViewModel

<div class="col-md-12 " id="trainingCourse-@Model.Id">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-edit"></i>
            </h3>
        </div>
        <div class="panel-body">
            @using (Ajax.BeginForm(MVC.TrainingCourse.Edit(), new AjaxOptions { HttpMethod = "POST", OnComplete = "editOnComplete(xhr, status, '" + Model.Id + "','#editButton" + Model.Id + "')" }, new { @class = "form-horizontal", id = Model.Id, autocomplete = "off", data_ajax_update = "trainingCourse-" + Model.Id }))
            {
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.TrainingCenterId)
                @Html.HiddenFor(model => model.RowVersion)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.CourseCode, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.NoAutoCompleteTextBoxFor(model => model.CourseCode)
                        @Html.ValidationMessageFor(model => model.CourseCode, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BeginDate, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.BeginDate, MVC.Shared.Views.EditorTemplates.PersianDatePicker)
                        @Html.ValidationMessageFor(model => model.BeginDate, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.EndDate, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.EndDate, MVC.Shared.Views.EditorTemplates.PersianDatePicker)
                        @Html.ValidationMessageFor(model => model.EndDate, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PracticalTotalHoures, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.PracticalTotalHoures, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PracticalTotalHoures, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TheoryTotalHoures, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.TheoryTotalHoures, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TheoryTotalHoures, null, new { @class = "text-danger" })
                    </div>
                </div>
              
            }
        </div>
        <div class="panel-footer ">
            <div class="pull-left">
                <button type="button" id="@string.Format("editButton{0}",Model.Id)" autocomplete="off" onclick="AjaxForm.CustomSubmit(this, '@Model.Id')" data-loading-text="در حال ارسال اطلاعات" class="btn btn-success btn-sm">
                    <i class="fa fa-check-square-o"></i>
                    ذخیره تغییرات
                </button>

                    <a class="btn btn-default btn-sm" data-ajax="true"
                       data-ajax-mode="REPLACE-WITH" data-ajax-complete="cancelEditOnComplete(xhr, status)"
                       data-ajax-update="#trainingCourse-@Model.Id" data-ajax-method="POST"
                       href="@Url.Action(MVC.TrainingCourse.CancelEdit(Model.Id))" role="button">
                        <i class="fa fa-arrow-right"></i>
                        انصراف
                    </a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
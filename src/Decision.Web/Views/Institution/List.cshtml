
@model Decision.ViewModel.Institution.InstitutionListViewModel
@{
    ViewBag.Institution = "مشاهده لیست موسسات آموزشی";
}
@Html.AntiForgeryToken()

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-2">
                <a class="btn btn-default btn-sm" data-ajax="true" data-ajax-mode="replace" data-ajax-success="onSuccessFormValidation(data, status, xhr,'createInstitutionForm','modal')"
                   data-ajax-update="#modal" href="@Url.Action(MVC.Institution.Create())" role="button"><i class="fa fa-plus"></i>درج موسسه جدید</a>
            </div>
            <div class="col-md-9">
                @using (Ajax.BeginForm(MVC.Institution.ListAjax(), new AjaxOptions { AllowCache = false, HttpMethod = "POST", OnComplete = "searchOnComplete(xhr,status,'#progress','#institutionPager','#institutionList')" }, new { @class = "form-horizontal search", autocomplete = "off", id = "institutionSearchForm" }))
                {
                    @Html.Hidden("PageIndex", Model.Request.PageIndex)
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="input-group">
                                <input type="text" name="Term" class="form-control"
                                       placeholder="نام موسسه">
                                <span class="input-group-btn">
                                    <button type="button" id="institutionSearchButton" onclick="directSearchPaging('#progress', 'institutionSearchForm', '#institutionPager', '#institutionList')" autocomplete="off" data-loading-text="جستجو" class="btn btn-success btn-sm search">
                                        <i class="fa fa-search"></i>         جستجو
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>


                }
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row" id="institutionList">
            @{ Html.RenderPartial(MVC.Institution.Views.ViewNames._ListAjax, Model);}
        </div>
    </div>
    <div class="panel-footer padding-5-5">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <button data-page="2" id="institutionPager" onclick="doPaging(this, '#progress', 'institutionSearchForm')" class="btn btn-info btn-block btn-sm" type="button">
                    بیشتر
                </button>
            </div>
        </div>
        <div id="progress" align="center" style="display: none">
            <img src="@Url.Content("~/Content/images/loading.gif")" alt="loading..."/>
        </div>
    </div>
</div>
@section Menu{
    @{Html.RenderPartial(MVC.Shared.Views._PublicSettingSideBarMenu);}
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}



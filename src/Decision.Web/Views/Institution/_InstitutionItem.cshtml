
@model Decision.ViewModel.Institution.InstitutionViewModel

<div class="col-md-12 " id="institution-@Model.Id">
    <div class="panel panel-default">
       
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    <i class="fa fa-building-o"></i>
                    <label class="text-muted">
                        نام :
                    </label>
                    <small>@Model.Name</small>
                </div>
                <div class="col-md-9">
                    <i class="fa fa-github-alt"></i>
                    <label class="text-muted">
                        توضیحات :
                    </label>
                    <small>@Model.Description</small>
                </div>
               
            </div>

            @{Html.RenderPartial(MVC.Shared.Views._AuditLog, Model);}
        </div>
        <div class="panel-footer ">
            <div class="pull-left">
                <a class="btn btn-primary btn-sm" data-ajax-oncomplete="editGetOnComplete(xhr,status)"
                   data-ajax="true" data-ajax-method="GET"
                   data-ajax-begin="onBegin(xhr,this)"
                   data-ajax-mode="REPLACE-WITH" data-ajax-success="inlineEditGetOnSuccess(data, status, xhr,'@Model.Id')"
                   data-ajax-update="#institution-@Model.Id"
                   href="@Url.Action(MVC.Institution.Edit(Model.Id))" role="button"><i class="fa fa-edit"></i>ویرایش</a>

                <button class="btn-sm btn btn-danger"
                        type="button" data-delete-url="@Url.Action(MVC.Institution.Delete())" data-removal-element="#institution-@Model.Id" id="remove-@Model.Id">
                    <i class="fa fa-trash-o"></i>
                    حذف
                </button>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

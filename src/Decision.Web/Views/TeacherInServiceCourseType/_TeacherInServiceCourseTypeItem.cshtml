@using System.Globalization
@model Decision.ViewModel.ApplicantInServiceCourseType.ApplicantInServiceCourseTypeViewModel
           
<div class="col-md-12 " id="ApplicantInServiceCourseType-@Model.Id">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    <i class="fa fa-list-alt"></i>
                    <label class="text-muted">
                        عنوان دوره :
                    </label>
                    <small>@Model.InServiceCourseTypeTitleName</small>
                </div>
                <div class="col-md-3">
                    <i class="fa fa-clock-o"></i>
                    <label class="text-muted">
                       ساعات گذرانده :
                    </label>
                    <small>@Model.HoursCount.GetPersianNumber()</small>
                </div>
               
            </div>
            @{Html.RenderPartial(MVC.Shared.Views._AuditLog, Model);}
        </div>
        <div class="panel-footer ">
            <div class="pull-left">
                <a class="btn btn-primary btn-sm" data-ajax-oncomplete="editGetOnComplete(xhr,status)"
                   data-ajax="true" data-ajax-method="GET"
                   data-ajax-begin="onBegin(xhr,this)"
                   data-ajax-mode="REPLACE-WITH" data-ajax-success="inlineEditGetOnSuccess(data, status, xhr,'@Model.Id')"
                   data-ajax-update="#ApplicantInServiceCourseType-@Model.Id"
                   href="@Url.Action(MVC.ApplicantInServiceCourseType.Edit(Model.Id))" role="button"><i class="fa fa-edit"></i>ویرایش</a>
                <button class="btn-sm btn btn-danger"
                        type="button" data-delete-url="@Url.Action(MVC.ApplicantInServiceCourseType.Delete())" data-Applicant="@Model.ApplicantId" data-removal-element="#ApplicantInServiceCourseType-@Model.Id" id="remove-@Model.Id">
                    <i class="fa fa-trash-o"></i>
                    حذف
                </button>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>


